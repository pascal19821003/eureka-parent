    <modelVersion>4.0.0</modelVersion>

    <artifactId>eureka-service</artifactId>



    <properties>
        <!--设置字符编码及java版本-->
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
    </properties>

    <dependencies>
